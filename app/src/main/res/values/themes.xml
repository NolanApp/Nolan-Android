<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.V23.Theme.Nolan" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_scrim</item>
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    </style>

    <style name="Platform.Theme.Nolan" parent="Platform.V23.Theme.Nolan" />

    <style name="Base.Theme.Nolan" parent="Platform.Theme.Nolan">
        <item name="buttonStyle">@style/Widget.Nolan.Button</item>
    </style>

    <style name="Theme.Nolan" parent="Base.Theme.Nolan">
        <item name="colorPrimary">@color/bi</item>
        <item name="colorPrimaryDark">@color/bi</item>
        <item name="colorAccent">@color/on_surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="Theme.Nolan.Main">
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>

    <style name="Theme.Nolan.Splash">
        <item name="android:windowBackground">@color/grey9</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/grey9</item>
        <item name="android:navigationBarColor">@color/grey9</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Nolan.Floating">
        <item name="colorSurface">@color/surface_floating</item>
    </style>

    <style name="Theme.Nolan.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/bi</item>
        <item name="colorPrimaryDark">@color/bi</item>
        <item name="colorAccent">@color/bi</item>
        <item name="colorSurface">@color/surface_floating</item>
        <item name="dialogCornerRadius">4dp</item>
        <item name="android:backgroundDimAmount">0.75</item>
    </style>

</resources>
