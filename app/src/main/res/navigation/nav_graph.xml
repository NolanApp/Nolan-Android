<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nolan"
    app:startDestination="@+id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="soup.nolan.ui.splash.SplashFragment"
        tools:layout="@layout/splash_fragment">

        <action
            android:id="@+id/action_to_camera"
            app:destination="@id/camera"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/camera"
        android:name="soup.nolan.ui.camera.CameraFragment"
        tools:layout="@layout/camera_fragment">

        <action
            android:id="@+id/action_to_after"
            app:destination="@id/after" />

    </fragment>

    <fragment
        android:id="@+id/after"
        android:name="soup.nolan.ui.after.AfterFragment"
        tools:layout="@layout/after_fragment" />

</navigation>
